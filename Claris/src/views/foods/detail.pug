extends ../layouts/layout
block content
   div(class = "container-md mg-top__90")
      .row.mt-5
        .col-lg-3
        .col-lg-6
          ul
           .col
            .row-lg-6.p-2
                .row
                  .col
                      li
                        a(href="")
                          img(src = food.ImageUrl, class="img-item")
                  .col
                      li.d-flex.mb-2
                        .show_information Food ID:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        = food.foodCode
                      li.d-flex.mb-2
                        .show_information Food Name:&nbsp;&nbsp;
                        = food.title              
                      li.d-flex.mb-2
                       .show_information Description:&nbsp;&nbsp;&nbsp;
                       = food.description
                      li.d-flex.mb-2
                       .show_information Price:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                       = food.price

            .d-flex
              a(href='/foods/' + food.id +'/edit' class="btn btn-success" style="background-color: #EA673D; border:#EA673D;margin-left: 10px;") CHỈNH SỬA
              form(method="POST" action="/foods/" + food.id + "?_method=DELETE")
                button(type='submit' class="btn btn-danger") XOÁ
        .col-lg-3